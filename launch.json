{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Celestial Debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/Celestial.exe", // or just ./MyProject on Linux/mac
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "MIMode": "gdb",
        "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe", // adapt as needed
        "setupCommands": [
          {
            "description": "Enable pretty printing",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "",
        "externalConsole": true
      }
    ]
  }
  